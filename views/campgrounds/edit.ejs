<% layout('/layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title:</label>
                <input value="<%=camp.title%>" class="form-control" type="text" id="title" name="campground[title]" required />
                <div class="valid-feedback">Valid!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location:</label>
                <input value="<%=camp.location%>" class="form-control" type="text" id="location" name="campground[location]" required />
                <div class="valid-feedback">Valid!</div>
            </div>
            <div class="mb-3">
                <div class="mb-3">
                    <label for="images" class="form-label">Add Images (jpeg, jpg, png):</label>
                    <input class="form-control" type="file" name="images" id="images" multiple />
                </div>
            </div>
            <div class="mb-3">
                <label for="uploaded_images" class="form-label">Uploaded Images:</label>
                <div>
                    <% camp.images.forEach(function(img, i) { %>
                    <img src="<%=img.thumbnail%>" alt="" class="img-thumbnail" />
                    <div class="form-check-inline">
                        <input type="checkbox" name="deleteImages[]" id="image-<%= i %>" value="<%=img.filename%>" />
                    </div>
                    <label for="image-<%= i %>">Delete</label>
                    <% }) %>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input
                        value="<%=camp.price%>"
                        type="text"
                        class="form-control"
                        placeholder="0.00"
                        id="price"
                        name="campground[price]"
                        aria-label="Price"
                        aria-describedby="price-label"
                        required
                    />
                    <div class="valid-feedback">Valid!</div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="campground[description]" required><%=camp.description%></textarea>
                <div class="valid-feedback">Valid!</div>
            </div>

            <div class="mb-3">
                <button class="btn btn-warning" type="submit">Update</button>
            </div>
        </form>
        <div>
            <a href="/campgrounds/<%=camp._id%>">Cancel</a>
        </div>
    </div>
</div>
